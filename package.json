		"@typescript-eslint/parser": "^6.19.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "2.36.0-next.5",
		"prettier": "^3.2.4",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "5.0.0-next.40",
		"svelte-check": "^3.6.3",
		"tslib": "^2.6.2",
